                .info
                    .info-header.red
                        .infos
                            .info-date
                                | February 2018
                            .info-buttons
                                .info-button-group
                                    button Save
                        .info-chart
                            canvas(id="info-chart-red", height="50")

                .info
                    .info-header.yellow
                        .infos
                            .info-date
                                | March 2018
                            .info-buttons
                                .info-button-group
                                    button Save
                        .info-chart
                            canvas(id="info-chart-yellow", height="50")
                        

